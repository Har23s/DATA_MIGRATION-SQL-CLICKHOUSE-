# This code assumes the connection variables 

# 1. Define the source tables with their full schema names and it is different from each other 
source_tables = [
    "ED.Table_1",
    "ED.Table_2",
    "Common.Table_3"
]

# 2. Define the target database in ClickHousee
clickhouse_database = "Databases_name"

print(" Starting data transfer process")

# 3. Loop through each table to read, count, and write
for sql_full_table_name in source_tables:
    
    # CORRECTED LOGIC:
    # 1. For the source, we use the full name directly (e.g., "ED.table_name).
    # 2. For the destination, we extract just the table name by splitting the string.
    target_table_only = sql_full_table_name.split('.')[-1]
    clickhouse_full_table_name = f"{clickhouse_database}.{target_table_only}"
    
    print(f"--- Processing: Reading from '{sql_full_table_name}' -> Writing to '{clickhouse_full_table_name}' ---")
    
    df_sql = None  # Reset DataFrame for each loop

    # STEP 1: Read data from SQL Server
    print("  Step 1/3: Reading from SQL Server...")
    try:
        # Use the full schema.table name directly
        df_sql = spark.read.jdbc(
            url=sql_jdbc_url,
            table=sql_full_table_name,
            properties=sql_connection_properties
        )
        print("  -> Read successful.")
    except Exception as e:
        print(f"    -> ERROR reading table '{sql_full_table_name}': {e}")
        print(f"--- Skipping this table due to read error. ---\n")
        continue  # Skip to the next table

    # STEP 2: Countt the records
    print("  Step 2/3: Counting records...")
    try:
        record_count = df_sql.count()
        print(f"    -> Found {record_count:,} records to transfer.")
    except Exception as e:
        print(f"    -> ERROR counting records: {e}")

    # STEP 3: Write data to ClickHouse
    print(f" Step 3/3: Writing to ClickHouse..")
    try:
        df_sql.write.jdbc(
            url=clickhouse_jdbc_url,
            table=clickhouse_full_table_name,
            mode="append",  # Use "append" to add data to the existing table
            properties=clickhouse_connection_properties
        )
        print("    -> Write successful.")
    except Exception as e:
        print(f"    -> ERROR writing to ClickHouse: {e}")
    
    print(f"--- Finished processing the table {sql_full_table_name}. ---\n")

print(" All tables have been processed. Transfer complete!")
